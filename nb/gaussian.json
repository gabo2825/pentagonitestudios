//originally made by joshuakcockrell on stackoverflow, adapted by gem
gaus=0;
if(gaus > 1 || gaus < 0){
	let u = 0, v = 0;
	while(u === 0) u = Math.random(); //Converting [0,1) to (0,1)
	while(v === 0) v = Math.random();
	gaus = Math.sqrt( -2.0 * Math.log( u ) ) * Math.cos( 2.0 * Math.PI * v );
	gaus = gaus / 10.0 + 0.5; // Translate to 0 -> 1
}
